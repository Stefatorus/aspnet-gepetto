<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="GPTAndroid.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GPTAndroid"
    xmlns:pages="clr-namespace:GPTAndroid.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="GPTAndroid">

    <!-- The starting page could be the LoginPage -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />

    <!-- Additional ShellContent items can be navigated to via routes -->
    <ShellContent
        Title="Conversations"
        ContentTemplate="{DataTemplate pages:ConversationsPage}"
        Route="ConversationsPage" />

    <ShellContent
        Title="Chat"
        ContentTemplate="{DataTemplate pages:ChatPage}"
        Route="ChatPage" />
</Shell>